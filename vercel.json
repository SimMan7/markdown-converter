{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb"
      }
    },
    {
      "src": "static/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/ads.txt",
      "dest": "/api/index.py"
    },
    {
      "src": "/upload",
      "dest": "/api/index.py"
    },
    {
      "src": "/download/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/debug",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/index.py"
    }
  ],
  "functions": {
    "api/index.py": {
      "maxDuration": 30,
      "includeFiles": "templates/**"
    }
  }
} 